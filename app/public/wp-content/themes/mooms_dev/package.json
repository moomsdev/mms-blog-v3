{
  "engines": {
    "node": ">=14.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --mode=development --config webpack.config.js && yarn sw:copy",
    "watch": "yarn sw:copy && cross-env NODE_ENV=development webpack --mode=development --watch --config webpack.config.js",
    "serve": "yarn sw:copy && cross-env NODE_ENV=development webpack serve --mode=development --config webpack.config.js",
    "build": "cross-env NODE_ENV=production webpack --mode=production --config webpack.config.js && yarn sw:copy",
    "build:analyze": "cross-env NODE_ENV=production ANALYZE=true webpack --config webpack.config.js",
    "build:critical": "cross-env NODE_ENV=production GENERATE_CRITICAL=true webpack --config webpack.config.js",
    "lint": "run-s -cl lint:wpcs lint:scripts lint:styles",
    "lint-fix": "run-s -cl lint-fix:wpcs lint-fix:scripts lint-fix:styles",
    "lint:scripts": "eslint resources/scripts --ext .js",
    "lint:styles": "stylelint resources/styles/**/*.scss",
    "lint-fix:scripts": "eslint resources/scripts --ext .js --fix",
    "lint-fix:styles": "stylelint resources/styles/**/*.scss --fix",
    "i18n": "run-s -cl i18n:textdomain i18n:pot",
          "release": "run-s -cl build optimize",

    "optimize": "run-s build:critical sw:copy",
    "sw:copy": "cp resources/scripts/sw.js dist/sw.js",
    "test:performance": "lighthouse http://localhost:3000 --output=json --output-path=performance-report.json",
    "precommit": "run-s lint build"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@csstools/normalize.css": "^12.1.1",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@popperjs/core": "^2.11.8",
    "@vue/preload-webpack-plugin": "^2.0.0",
    "airbnb-browser-shims": "^2.1.0",
    "aos": "^3.0.0-beta.6",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "bootstrap": "^5.3.7",
    "compression-webpack-plugin": "^10.0.0",
    "core-js": "^3.43.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    "file-loader": "^6.2.0",
    "gsap": "^3.12.5",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webpack-plugin": "^2.4.2",
    "import-glob": "^1.5.0",
    "jquery": "^3.7.1",
    "jquery-validation": "^1.19.5",
    "loader-utils": "^3.2.1",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.3",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.3.0",
    "postcss-reporter": "^7.0.5",
    "postcss-simple-vars": "^7.0.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "sweetalert2": "^11.10.1",
