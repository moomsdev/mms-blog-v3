    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "critical": "^5.0.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
